{
    "name": "webignition/basil-runner",
    "description": "Runs tests written in basil",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-runner",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilRunner\\": "src",
            "webignition\\BasilRunner\\Bin\\": "bin"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilRunner\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": [
            "./vendor/bin/ecs check src tests --ansi --config ecs.yaml",
            "./vendor/bin/phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ],
        "compiler-remove": "rm -f compiler.phar",
        "compiler-fetch": [
            "curl -L https://github.com/webignition/basil-cli-compiler/releases/download/0.4/compiler.phar --output compiler.phar",
            "chmod +x compiler.phar"
        ],
        "runner-remove": "rm -f runner.phar",
        "runner-fetch": [
            "curl -L https://github.com/webignition/basil-cli-runner/releases/download/0.2/runner.phar --output runner.phar",
            "chmod +x runner.phar"
        ],
        "setup": [
            "@composer install --ansi",
            "@compiler-remove",
            "@compiler-fetch",
            "@runner-remove",
            "@runner-fetch"
        ]
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "symfony/console": "^5.1",
        "symfony/process": "^5.1",
        "webignition/basil-phpunit-result-printer": "0.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.0",
        "phpunit/phpunit": "^9.2",
        "squizlabs/php_codesniffer": "3.*",
        "symfony/yaml": "^5.1",
        "symplify/easy-coding-standard": "^8.1",
        "webignition/symfony-panther-webserver-runner": ">=0.3,<1"
    },
    "bin": [
        "bin/basil-runner"
    ],
    "config": {
        "sort-packages": true
    }
}
