{
    "name": "webignition/basil-runner",
    "description": "Runs tests written in basil",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-runner",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilRunner\\": "src",
            "webignition\\BasilRunner\\Bin\\": "bin",
            "webignition\\BasilRunner\\Generated\\": "generated"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilRunner\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR12",
        "static-analysis": "./vendor/bin/phpstan analyse bin src tests --level=8",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "phpunit/phpunit": "~8.0",
        "symfony/config": "^5.0",
        "symfony/console": "5.0",
        "symfony/dependency-injection": "^5.0",
        "symfony/dotenv": "^5.0",
        "symfony/finder": "^5.0",
        "symfony/http-kernel": "^5.0",
        "symfony/yaml": "^5.0",
        "webignition/base-basil-test-case": "^0.3.0",
        "webignition/basil-compiler": "^0.4.0",
        "webignition/basil-loader": "^0.13.0",
        "webignition/php-basil-compilable-source-factory": "^0.7.0",
        "webignition/symfony-console-typed-input": "^0.4.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "php-mock/php-mock": "^2.1",
        "php-mock/php-mock-mockery": "^1.3",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.0",
        "phpstan/phpstan-mockery": "^0.12.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "bin": [
        "bin/basil-runner"
    ],
    "config": {
        "sort-packages": true
    }
}
