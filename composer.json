{
    "name": "webignition/basil-runner",
    "description": "Runs tests written in basil",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-runner",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilRunner\\": "src",
            "webignition\\BasilRunner\\Bin\\": "bin",
            "webignition\\BasilRunner\\Generated\\": "generated"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilRunner\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR2",
        "static-analysis": "./vendor/bin/phpstan analyse bin src tests --level=7",
        "test": "./vendor/bin/phpunit -c phpunit.dev.xml --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.2",
        "phpunit/phpunit": "~8.0",
        "symfony/console": "^4.3",
        "symfony/http-kernel": "^4.3",
        "symfony/config": "^4.3",
        "symfony/dependency-injection": "^4.3",
        "symfony/yaml": "^4.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^0.11.12"
    },
    "bin": [
        "bin/basil-runner"
    ]
}
