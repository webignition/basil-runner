{
    "name": "webignition/basil-runner",
    "description": "Runs tests written in basil",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-runner",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilRunner\\": "src",
            "webignition\\BasilRunner\\Bin\\": "bin"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilRunner\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": [
            "./vendor/bin/ecs check src tests --ansi --config ecs.yaml",
            "./vendor/bin/phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ],
        "integration-test-setup": "docker-compose -f tests/docker-compose.yml -f tests/docker-compose-self.yml up -d",
        "integration-test-run": [
            "./vendor/bin/phpunit tests/Integration/LocalDelegatorTest.php",
            "./vendor/bin/phpunit tests/Integration/ContainerDelegatorTest.php"
        ],
        "integration-test-teardown": "docker-compose -f tests/docker-compose.yml -f tests/docker-compose-self.yml down",
        "test-integration": [
            "@composer integration-test-setup",
            "@composer integration-test-run",
            "@composer integration-test-teardown"
        ]
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "monolog/monolog": "^2.1",
        "psr/log": "^1.1",
        "symfony/console": "^5.1",
        "symfony/process": "^5.1",
        "symfony/yaml": "^5.1",
        "webignition/basil-compiler-models": "^0.12.0",
        "webignition/basil-runner-documents": ">=0.2,<1",
        "webignition/single-command-application-factory": "^0.1.0",
        "webignition/symfony-console-typed-input": "^0.5.0",
        "webignition/tcp-cli-proxy-client": "^0.8.0",
        "webignition/yaml-document-generator": ">=0.2,<1"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "php-mock/php-mock": "^2.2",
        "php-mock/php-mock-mockery": "^1.3",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.0",
        "phpstan/phpstan-mockery": "^0.12.7",
        "phpunit/phpunit": "^9.2",
        "squizlabs/php_codesniffer": "3.*",
        "symplify/easy-coding-standard": "^8.1",
        "webignition/yaml-document-set-parser": "^0.1.0"
    },
    "bin": [
        "bin/basil-runner"
    ],
    "config": {
        "sort-packages": true
    }
}
